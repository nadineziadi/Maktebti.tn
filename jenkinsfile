pipeline {
    agent any
    environment {
        GITHUB_TOKEN = credentials('github-token')
    }
    stages {
        stage("Clean up") {
            steps {
                deleteDir()
            }
        }
        stage('Checkout') {
            steps {
                git url: 'https://github.com/nadineziadi/Maktebti.tn'
            }
        }
        stage("Generate docker image") {
            steps {
                sh "docker build -t nadineziadi510802/biblioapp:1.0.${env.BUILD_NUMBER} ."
            }
        }
        stage("Push docker image") {
            steps {
                sh "docker push nadineziadi510802/biblioapp:1.0.${env.BUILD_NUMBER}"
            }
        }
        stage("Clone gitops repo") {
            steps {
                sh "git clone https://github.com/nadineziadi/argocdBiblioApp"
            }
        }
        stage("Verify Cloned Repo") {
            steps {
                dir('argocdbiblioApp') {
                    sh 'ls -R'
                }
            }
        }
        stage("Change image tag") {
            steps {
                dir('argocdbiblioApp/biblio-app') {
                    script {
                        def deployment = readFile('biblio-depoly.yml') // Nom du fichier corrigé
                        def updatedDeployment = deployment.replaceAll(/nadineziadi510802\/biblioapp:\s*[\w.-]+/, "nadineziadi510802/biblioapp:1.0.${env.BUILD_NUMBER}")
                        writeFile file: 'biblio-depoly.yml', text: updatedDeployment // Nom du fichier corrigé
                    }
                }
            }
        }
        stage("Commit changes") {
            steps {
                dir('argocdbiblioApp/biblio-app') {
                    script {
                        sh 'git config user.email "jenkins@agent.com"'
                        sh 'git config user.name "jenkins-admin"'
                        sh 'git add biblio-depoly.yml' // Nom du fichier corrigé
                        sh 'git commit -m "updated image tag"'
                        sh 'git push https://nadineziadi:${GITHUB_TOKEN}@github.com/nadineziadi/argocdbiblioApp.git main'
                    }
                }
            }
        }
    }
}
